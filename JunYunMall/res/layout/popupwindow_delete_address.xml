<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lineat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/half_alpha_iv"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_makesure_delete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
             android:background="@drawable/pop_first_selector"
            android:gravity="center"
            android:text="确定要删除该地址吗？"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_yes_delete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
             android:background="@drawable/pop_first_selector"
            android:gravity="center"
            android:text="删除"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_no_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/pop_first_selector"
            android:gravity="center"
            android:text="取消"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>