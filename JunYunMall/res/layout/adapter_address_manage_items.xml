<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- 店铺名 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_value_40"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_consignee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_value_12"
            android:text="高艳"
            android:textColor="@color/color_2b2b2b"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_consignee_phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="15dp"
            android:text="13468615895"
            android:textColor="@color/color_2b2b2b"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_consignee_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_value_12"
        android:text="陕西省西安市雁塔区丈八沟街道汇鑫IBC D座 12楼 1206室"
        android:textColor="@color/color_2b2b2b"
        android:textSize="@dimen/text_size_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_value_1"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/color_e1e1e1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btn_address_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:drawableLeft="@drawable/iv_address_delete"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="删除"
            android:textColor="#2b2b2b"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_address_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btn_address_delete"
            android:background="@null"
            android:drawableLeft="@drawable/iv_address_edit"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="编辑"
            android:textColor="#2b2b2b"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/isdefault_checkbox_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_address_edit"
            android:layout_alignBottom="@+id/btn_address_edit"
            android:layout_marginLeft="12dp"
            android:button="@drawable/selector_address_isdefault_checkbox"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="默认地址"
            android:textColor="@drawable/selector_address_isdefault"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>