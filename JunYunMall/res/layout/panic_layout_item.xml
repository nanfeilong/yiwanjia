<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_value_111"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_value_111" >

        <ImageView
            android:id="@+id/panic_buy_listview_iv1"
            android:layout_width="@dimen/dp_value_115"
            android:layout_height="@dimen/dp_value_111"
            android:src="@drawable/panic_buy_listview" />

        <TextView
            android:id="@+id/panic_buy_listview_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_value_8"
            android:layout_marginTop="@dimen/dp_value_10"
            android:layout_toRightOf="@+id/panic_buy_listview_iv1"
            android:text="时尚夏季潮流  修身阔腿裤套装"
            android:textColor="@color/color_2b2b2b"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/panic_buy_listview_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/panic_buy_listview_tv1"
            android:layout_below="@+id/panic_buy_listview_tv1"
            android:layout_marginTop="@dimen/dp_value_6"
            android:text="简单利落+显高瘦身"
            android:textColor="@color/color_6cc4ea"
            android:textSize="@dimen/text_size_11" />

        <TextView
            android:id="@+id/panic_buy_listview_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/panic_buy_listview_tv2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_value_10"
            android:text="已购124件"
            android:textColor="@color/color_e20d11"
            android:textSize="@dimen/text_size_11" />

        <TextView
            android:id="@+id/panic_buy_listview_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/panic_buy_listview_tv3"
            android:layout_alignLeft="@+id/panic_buy_listview_tv3"
            android:text="￥ 199"
            android:textColor="@color/color_e20d11"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/panic_buy_listview_tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/panic_buy_listview_tv4"
            android:layout_alignTop="@+id/panic_buy_listview_tv4"
            android:layout_marginLeft="5dp"
            android:text="￥ 999" />

        <Button
            android:id="@+id/panic_buy_listview_bt"
            android:layout_width="@dimen/dp_value_60"
            android:layout_height="@dimen/dp_value_20"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_value_10"
            android:layout_marginRight="@dimen/dp_value_12"
            android:background="@drawable/lijiqiang"
            android:text="立即抢>"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/text_size_11" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_value_1"
        android:background="@color/color_e1e1e1" />

</LinearLayout>