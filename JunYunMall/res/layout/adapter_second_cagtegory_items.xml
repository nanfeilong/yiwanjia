<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <cn.junyun.mall.view.ScaleImageView
        android:id="@+id/category_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sss" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_value_20"
        android:background="@color/white"
        android:text="2016春款夏装韩版"
        android:gravity="center_vertical"
        android:textColor="@color/color_2b2b2b"
        android:paddingLeft="@dimen/dp_value_10"
        android:paddingRight="@dimen/dp_value_10"
        android:textSize="@dimen/text_size_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_value_20"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="365块"
            android:gravity="center_vertical"
            android:textColor="@color/color_e20d11"
             android:layout_marginLeft="@dimen/dp_value_10"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/people_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="173人付款"
            android:gravity="center_vertical|right"
            android:textColor="@color/color_969696"
            android:layout_marginRight="@dimen/dp_value_10"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

</LinearLayout>