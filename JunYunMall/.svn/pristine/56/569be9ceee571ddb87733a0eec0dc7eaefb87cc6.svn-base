<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/white"
    android:orientation="vertical" >

    <!-- 店铺名 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_value_40"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_value_12"
            android:src="@drawable/entity_shop_icon" />

        <TextView
            android:id="@+id/shop_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="莱威尔精品女鞋"
            android:textColor="@color/color_2b2b2b"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <!-- 商品列表 -->

    <cn.junyun.mall.view.MyListView
        android:id="@+id/order_inner_listView"
        android:layout_width="match_parent"
        android:dividerHeight="@dimen/dp_value_0"
        android:layout_height="wrap_content" />
    <!-- 配送方式 ，买家留言 -->

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_value_1"
        android:background="@color/color_e1e1e1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_value_40"
        android:gravity="center_vertical"
         android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/shop_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_value_12"
            android:text="@string/str_in_distribution"
            android:textColor="@color/color_2b2b2b"
            android:textSize="@dimen/text_size_12" />
        
       <TextView
            android:id="@+id/courier_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_value_12"
            android:text="天天快递(5元配送费)"
            android:textColor="@color/color_2b2b2b"
            android:textSize="@dimen/text_size_12" />
       
        
    </LinearLayout>
      <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_value_1"
        android:background="@color/color_e1e1e1" />
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_value_40"
        android:gravity="center_vertical"
         android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/shop_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_value_12"
            android:text="@string/str_buyer_message"
            android:textColor="@color/color_2b2b2b"
            android:textSize="@dimen/text_size_12" />
        
       <EditText
            android:id="@+id/courier_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_value_12"
            android:hint="@string/str_buyer_messag_tip"
            android:background="@null"
            android:textColor="@color/color_2b2b2b"
            android:textSize="@dimen/text_size_12" />
        
    </LinearLayout>

</LinearLayout>