<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <cn.junyun.mall.view.BestSellerItemView
        android:id="@+id/bestSellIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/best_seller" >
    </cn.junyun.mall.view.BestSellerItemView>

    <TextView
        android:id="@+id/bestSellTv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bestSellIv"
        android:layout_marginLeft="@dimen/dp_value_10"
        android:layout_marginTop="@dimen/dp_value_5"
        android:text="百搭小白鞋"
        android:textColor="@color/color_2b2b2b"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/bestSellTv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bestSellTv1"
        android:layout_below="@+id/bestSellTv1"
        android:layout_marginTop="5dp"
        android:paddingBottom="@dimen/dp_value_5"
        android:text="124"
        android:textColor="@color/color_969696"
        android:textSize="@dimen/dp_value_11" />

    <TextView
        android:id="@+id/bestSellTv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bestSellTv2"
        android:layout_alignBottom="@+id/bestSellTv2"
        android:layout_toRightOf="@+id/bestSellTv2"
        android:text="人已购"
        android:textColor="@color/color_969696"
        android:textSize="@dimen/dp_value_11" />

    <TextView
        android:id="@+id/bestSellTv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bestSellTv3"
        android:layout_alignBottom="@+id/bestSellTv3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_value_10"
        android:text="￥265"
        android:textColor="@color/color_e20d11"
        android:textSize="@dimen/dp_value_11" />

</RelativeLayout>