<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_value_40"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/iv_myorder_all_shoplogo"
            style="@style/wrap_centerVertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/iv_my_wallet" />

        <TextView
            android:id="@+id/tv_myorder_all_shopname"
            style="@style/wrap_centerVertical"
            android:layout_alignBottom="@+id/iv_myorder_all_shoplogo"
            android:layout_toRightOf="@+id/iv_myorder_all_shoplogo"
            android:text="莱薇尔精品女鞋"
            android:textColor="@color/tv_item_color_black"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_myorder_all_transaction_status"
            style="@style/wrap_centerVertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:text="交易成功"
            android:textColor="#e20d11"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>

   <!-- 商品列表 -->

    <cn.junyun.mall.view.MyListView
        android:id="@+id/mlv_myorder_inner_listView"
        android:layout_width="match_parent"
        android:dividerHeight="@dimen/dp_value_0"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d6d7dc" />

</LinearLayout>