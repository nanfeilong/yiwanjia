<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BestSellerActivity" >

    <!-- 热卖商品 -->

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/best_seller_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <include
                android:id="@+id/title"
                android:layout_height="wrap_content"
                layout="@layout/layout_header" />

            <cn.junyun.mall.view.MyGridView
                android:id="@+id/bestSeller"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f1f1f1"
                android:cacheColorHint="#00000000"
                android:fadingEdge="none"
                android:horizontalSpacing="@dimen/dp_value_2"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="@dimen/dp_value_6" >
            </cn.junyun.mall.view.MyGridView>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>